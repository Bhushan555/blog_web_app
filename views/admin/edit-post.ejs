<a href="/dashboard" class="back-btn">&larr; Back</a>
<div class="admin-title">
    <h2>Edit post</h2>
    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="delete" class="form-btn">
    </form>
</div>
<form class="new_post_form" action="/edit-post/<%= data._id %>?_method=PUT" method="post">
    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>">

    <label for="body"><b>Body</b></label>
    <textarea name="body" cols="30" rows="10" placeholder="Post Body"><%= data.body %></textarea>

    <input type="submit" value="Edit" class="form-btn">
</form>