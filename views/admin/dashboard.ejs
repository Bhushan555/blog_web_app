<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="">+ Add New</a>
</div>


<ul class="admin-posts">
    <% data.forEach(post=> { %>
        <li>
            <a href="/post/<%= post._id %>">
                <%= post.title %> &nearr;
            </a>

            <div class="admin-post-controls">
                <a href="/edit-post/<%= data._id %>" class="form-btn">Edit</a>
                <form action="/delete-post/<%= data._id %>?method=DELETE" method="POST"">
                    <input type=" submit" value="delete" class="form-btn">
                </form>
            </div>
        </li>
        <% }) %>
</ul>