<div class="author">
    <h1 class="author_heading">Search Results</h1>
</div>

<section class="articles">

    <ul class="articles_ul">

        <% if (data.length>0) { %>
            <% data.forEach(blog => { %>
                <li>
                    <a href="post/<%= blog._id %>">
                        <span class="article_title"><%= blog.title %></span>
                        <span class="article_date"><%= blog.createdAt.toDateString() %></span>
                    </a>
                </li>
            <% }) %>
        <% }else{ %>

            <h3 class="no-data">No data found</h3>
            <% } %>

    </ul>


</section>